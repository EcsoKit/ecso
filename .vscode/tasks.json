{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Ecso",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "opam config exec -- make -s -j`nproc` STATICLINK=1 ADD_REVISION=1 && opam config exec -- make -s -j`nproc` STATICLINK=1 ADD_REVISION=1 PLUGIN=ecso plugin",
            "options": {
                "cwd": "${workspaceFolder}/../.."
            }
        },
        {
            "label": "Test Ecso",
            "type": "shell",
            "group": "test",
            "command": "haxe RunCi.hxml -D test=${input:target}",
            "options": {
                "cwd": "${workspaceFolder}/tests"
            }
        }
    ],
    "inputs": [
        {
            "description": "Choose a target",
            "default": "interp,macro,server",
            "id": "target",
            "type": "pickString",
            "options": [
                "interp,macro,server",
                "server",
                "interp",
                "macro",
                "js",
                "hl",
                "cs",
                "jvm",
                "cpp",
                "php",
                "php7",
                "lua",
                "python",
                "cppia",
                "java",
                "flash9",
                "neko",
            ]
        }
    ]
}